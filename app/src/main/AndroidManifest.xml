<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.finalprojectcovid_19">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".Activity.PrivteChatActivity"></activity>
        <activity android:name=".Activity.AllMessageActivity"
            android:theme="@style/ActionBar"/>
        <activity
            android:name=".Activity.AboutCoronaActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/ActionBar" />
        <activity
            android:name=".Activity.PreventionMethodsActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/ActionBar" />
        <activity
            android:name=".Activity.CoronaSymptomsActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/ActionBar" />
        <activity
            android:name=".Activity.DetailsActivity"
            android:parentActivityName=".Activity.MainActivity"
            android:theme="@style/ActionBar" />
        <activity android:name=".Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.RegisterActivity" />
        <activity android:name=".Activity.MainActivity" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>